<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.filehandle.MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/acc"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/file_name_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.48"
            android:hint="@string/inputName"
            android:selectAllOnFocus="true"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/file_name_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/draw_chart" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chartDispDraw0"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_alignTop="@+id/linearLayout1"
        android:layout_marginTop="50dp"
        android:orientation="vertical" >
        </LinearLayout>
    <LinearLayout
        android:id="@+id/chartDispDraw1"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_below="@+id/chartDispDraw0"
        android:orientation="vertical" >
        </LinearLayout>
    <LinearLayout
        android:id="@+id/chartDispDraw2"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_below="@+id/chartDispDraw1"
        android:orientation="vertical" >

    </LinearLayout>

</RelativeLayout>